
<div class="grid_12">
<h1>Blog</h1>

<%= link_to 'New Post', new_post_path %>

<h1>All Posts </h1>
<% @posts.each do |post| %>
  <h3><%= link_to post.title, post %></h3> 
  	by <%= post.person.name %>
  	<br>
    <%= post.body %>
    <br>
    <% if @user %>
    	<% if @user = post.person%>
    		<%= link_to 'Edit', edit_post_path(post) %>
    		<%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %>
    	<%end%>
    <%end%>
<% end %>

<br />
</div>

